name:                {{package}}
version:             0.1.0.0
synopsis:            Auto-generated API bindings for {{package}}
description:         Please see README.md
homepage:            https://github.com/swagger-api/swagger-codegen#readme
author:              Author Name Here
maintainer:          author.name@email.com
copyright:           YEAR - AUTHOR
category:            Web
build-type:          Simple
cabal-version:       >=1.10

library
  hs-source-dirs:      {{sourceFolder}}
  exposed-modules:     {{modulePrefix}}.API
                     , {{modulePrefix}}.Types
                     , {{modulePrefix}}.Server
                     , {{modulePrefix}}.Client
                     , {{modulePrefix}}.Backend
  ghc-options:         -Wall
  build-depends:       base
                     , aeson
                     , text
                     , containers
                     , network-uri
                     , http-api-data
                     , servant
                     , warp
                     , transformers
                     , mtl
                     , http-client
                     , http-types
                     , time
  default-language:    Haskell2010
